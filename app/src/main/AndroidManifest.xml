<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="localhost.locatecarton">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LocationActivity"
            android:label="@string/LocationEntryScreenName">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_screen_name" >
            <intent-filter>
                <action android:name="localhost.locatecarton.Settings" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CartonActivity"
            android:label="@string/AcceptCartonScreenLable" >
            <intent-filter>
                <action android:name="localhost.locatecarton.CartonActivity" />
            </intent-filter>
        </activity>
    </application>

</manifest>
